---
import MOEITSStaffCalendar from "../partials/moeits-staff-data.astro";

const title = "MOEITS_Staff Calendar";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
  </head>
  <body class="area">
    <h1>MOEITS_Staff Calendar</h1>
    <MOEITSStaffCalendar />
  </body>

  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(
        135deg,
        hsl(184, 76%, 16%) 0%,
        hsl(168, 37%, 16%) 100%
      );
      min-height: 100vh;
      padding: 20px;
      color: white;
    }

    .container {
      max-width: 800px;
      width: 100%;
    }

    h1 {
      text-align: center;
      color: white;
      margin-bottom: 30px;
      font-size: 2.5em;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .controls {
      text-align: center;
      margin-bottom: 30px;
    }

    button {
      background: white;
      color: #667eea;
      border: none;
      padding: 12px 30px;
      font-size: 16px;
      border-radius: 25px;
      cursor: pointer;
      font-weight: bold;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
      transition:
        transform 0.2s,
        box-shadow 0.2s;
    }

    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 8px rgba(0, 0, 0, 0.3);
    }

    button:active {
      transform: translateY(0);
    }
  </style>
</html>
